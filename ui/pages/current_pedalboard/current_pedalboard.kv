#:import BlockLabel ui.api.block_label.BlockLabel

<CurrentPedalboardScreen>:
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint: 1, .3
            anchor_x: 'left'
            anchor_y: 'top'

            BlockLabel:
                text: '01 | Pdl Name'.upper()
                bold: True

                canvas.before:
                    Color:
                        rgba: .8, .8, .8, .5
                    Rectangle:
                        pos: self.pos
                        size: self.size


        BlockLabel:
            size_hint: 1, 1
            font_name: 'assets/fonts/black_ops_one/BlackOpsOne-Regular.ttf'
            markup: True
            text: '03'
            bold: True

        BlockLabel:
            size_hint: 1, .3
            markup: True
            text: 'Effect Name'
