<CurrentPedalboardScreen>:
    FloatLayout:

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            Label:
                markup: True
                text: '01 | '
                bold: True
                font_size: 32
                size: self.texture_size
                size_hint: (None, None)
                color: (0, 0, 0, 1)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'

            Label:
                markup: True
                text: 'Pdl Name'.upper()
                bold: True
                font_size: 32
                size: self.texture_size
                size_hint: (None, None)
                color: (0, 0, 0, 1)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            Label:
                font_name: 'assets/fonts/black_ops_one/BlackOpsOne-Regular.ttf'
                markup: True
                text: '3'
                bold: True
                font_size: 120
                size: self.texture_size
                size_hint: (None, None)
                color: (0, 0, 0, 1)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'

            Label:
                markup: True
                text: 'Effect Name'
                font_size: 35
                size: self.texture_size
                size_hint: (None, None)
                color: (0, 0, 0, 1)
